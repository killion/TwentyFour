<style type="text/css">
th {
  height: 150px;
  background-image: url(<%= @trip.city_image %>);
}

td {
  padding: 0 !important;
}
</style>

<table class="hours table table-hover table-striped">
  <tr>
    <th colspan="2">
      <a href="#share-modal" class="show-share-modal" data-toggle="modal"><i class="icon-share-sign"></i></a>
      <h1>24 hours in<br><%= @trip.city %></h1>
      <span class="actions">
        <%= link_to "<i class='icon-search'></i> Find Activities".html_safe, trip_activities_path(@trip), :class => "btn btn-warning find-activity" %>
        <button class="btn btn-warning find-event"><i class="icon-search"></i> Find Events</button>
      </span>
    </th>
  </tr>
  <% @activities.each do |activity| %>
    <tr class="activity activity_result" data-activity-json="<%= activity.to_json %>">
      <td>
        <div class="activity_image" 
          style="background-image: url('<%= activity.thumbnail_hi_res_url %>');">
          <h4 class="activity_title">
            <%= activity.title %>
          </h4>
          <div>
            <%= select_tag(:city_id, options_for_select(@trip.next_24_hours.map{ |s| s.beginning_of_hour.to_s(:local) }), { :class => 'time-select' } ) %>
          </div>
          <%= link_to "Book " + activity.price_formatted, 
            activity.web_url, 
            :target => "_blank", 
            :class => "book_activity activity_price btn btn-success" %>
        </div>
        <p class="activity_description">
          <%=raw activity.short_description %>
        </p>
      </td>
    </tr>
  <% end %>
</table>

<%= render :partial => "trips/share-modal" %>
